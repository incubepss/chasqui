        <mj-table cellpadding="6px">
            <tr>
              <td>Nombre completo</td>
              <td>{{ name }}</td>
            </tr>
            <tr>
              <td>E-Mail de compra</td>
              <td>{{ email }}</td>
            </tr>
            <tr>
              <td>Teléfono</td>
